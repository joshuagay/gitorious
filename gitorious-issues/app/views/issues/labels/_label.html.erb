<tr>
  <td>
    <%= content_tag(:span, label.name, :class => 'gts-color-box', :style => "background-color: #{label.color}") %>
  </td>
  <td>
    <%= label.name %>
  </td>
  <td>
    <%= label.issues.count %>
  </td>
  <td>
    <%= l(label.created_at) %>
  </td>
  <td>
    <%= link_to 'Edit', edit_project_issue_label_path(label.project, label), :class => 'btn btn-mini' %>
    <%= link_to 'Delete', [label.project, :issue, label], :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>
