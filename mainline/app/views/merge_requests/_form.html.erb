<%= form.input :summary,
  :label => t(:summary, :scope => 'activerecord.attributes.merge_request'),
  :hint => t("views.merges.info.summary"),
  :input_html => { :class => 'input-xxlarge' } %>

<%= form.input :proposal,
  :label => t(:proposal, :scope => 'activerecord.attributes.merge_request'),
  :hint => t("views.merges.info.proposal"),
  :input_html => { :rows => 8, :class => 'input-xxlarge' } %>

<%= form.input :target_repository_id, :as => :select, :label => t(:target_repository_id, :scope => 'activerecord.attributes.merge_request'),
  :hint => t("views.merges.info.target_repos"), :collection => @repositories %>

<div id="target_branch_selection">
  <%= render "target_branches" %>
</div>

<%= form.input :source_branch, :as => :select, :collection => @source_branches.map(&:name),
  :include_blank => false,
  :label => t(:source_branch, :scope => 'activerecord.attributes.merge_request'),
  :hint => t("views.merges.info.target_repos") %>

<div id="commit_selection">
  <%= render "commit_list" %>
</div>
