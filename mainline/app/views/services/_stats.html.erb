<% if services.count > 0 %>
  <table class="table table-striped service-stats">
    <thead>
      <tr>
        <td class="gts-cell-small"><%= service_type.id_label %></td>
        <td class="gts-cell-small">Runs</td>
        <td class="gts-cell-small">Last response</td>
        <td class="gts-cell-small">Created by</td>
        <td colspan="2"></td>
      </tr>
    </thead>
    <tbody>
      <% services.each do |service| %>
        <tr>
          <td><%= service.id %></td>
          <td><%= service.runs %></td>
          <td><%= service.last_response %></td>
          <td>
            <a href="<%= user_path(service.user) %>"><%= service.user.fullname %></a>
          </td>
          <td class="gts-cell-small">
            <a href="<%= project_repository_service_path(repository.project, repository, service) %>" data-method="delete"><i class="icon icon-remove"></i> Remove</a>
          </td>
          <td class="gts-cell-small">
            <a href="<%= project_repository_service_tests_path(repository.project, repository, service) %>" data-method="post"><i class="icon icon-play-circle"></i> Test</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
