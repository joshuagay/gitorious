  <%= repo_header repository, :current_user => current_user, :active => :admin, :header_level => 2 %>

<div class="container">
  <%= error_messages(hook) -%>
  <%= form_for(hook, :as => :hook, :url => project_repository_hook_url(repository.project, repository, hook), :method => "post", :html => { :class => "form-horizontal" }) do |f| -%>
    <fieldset>
      <legend><%= @title = "Adding hook for #{repository.slug}" %></legend>
      <div class="control-group">
        <%= f.label :url, :class => "control-label" -%>
        <div class="controls">
          <%= f.text_field :url, :class => "input-xlarge" -%>
          <p class="help-block">
            A payload will be <code>POST</code>-ed to this URL every time someone
            pushes to this repository.
          </p>
        </div>
      </div>
      <div class="form-actions">
        <button class="btn btn-primary" type="submit">Add hook</button>
      </div>
    </fieldset>
  <% end %>
</div>
