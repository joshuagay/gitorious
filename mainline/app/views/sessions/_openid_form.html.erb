<fieldset>
  <div class="control-group">
    <%= label_tag :openid_url, t("views.sessions.openid"), :class => "control-label" %>
    <div class="controls">
      <%= text_field_tag "openid_url", params[:openid_url] || Gitorious::OpenID.default_provider_url,
        :class => "input-xlarge", :required => true -%>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= check_box_tag "openid_remember_me" %>
        <label for="openid_remember_me"><%= t("views.sessions.remember") %></label>
      </label>
    </div>
  </div>
  <div class="form-actions">
    <button class="btn btn-primary" type="submit"><%= t("views.sessions.submit") %></button>
  </div>
</fieldset>
