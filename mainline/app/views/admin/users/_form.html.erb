<fieldset>
  <div class="control-group">
    <%= form.label :login, t(:login, :scope => "activerecord.attributes.user"), :class => "control-label" -%>
    <div class="controls">
      <%= form.text_field :login, :class => "input-xlarge" -%>
    </div>
  </div>
  <div class="control-group">
    <%= form.label :email, t(:email, :scope => "activerecord.attributes.user"), :class => "control-label" -%>
    <div class="controls">
      <%= form.text_field :email, :class => "input-xlarge" -%>
    </div>
  </div>
  <div class="control-group">
    <%= form.label :password, t(:password, :scope => "activerecord.attributes.user"), :class => "control-label" -%>
    <div class="controls">
      <%= form.password_field :password, :class => "input-xlarge" -%>
    </div>
  </div>
  <div class="control-group">
    <%= form.label :password_confirmation, t(:password_confirmation, :scope => "activerecord.attributes.user"), :class => "control-label" -%>
    <div class="controls">
      <%= form.password_field :password_confirmation, :class => "input-xlarge" -%>
    </div>
  </div>
  <% if Gitorious.dot_org? %>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <%= form.check_box :terms_of_use  -%>
          I accept the <%= render :partial => "licenses/tos_link" -%>
        </label>
      </div>
    </div>
  <% else %>
    <%= form.hidden_field :terms_of_use, { value: '1' } %>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= form.check_box :is_admin, {}, "1", "0" -%>
        <%= t("views.users.is_admin") -%>
      </label>
    </div>
  </div>
  <div class="form-actions">
    <button class="btn btn-primary" type="submit"><%= t("views.common.create") %></button>
  </div>
</fieldset>
