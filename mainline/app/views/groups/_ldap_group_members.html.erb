<%= pull_box("LDAP Groups", :class => "repositories-box") do %>
  <table class="table">
    <% for group_name in group.ldap_group_names %>
      <tr><td><%= group_name %></td></tr>
    <% end %>
  </table>
<% end %>
<%= pull_box("Users", :class => "repositories-box") do %>
  <table class="table">
    <% for member in group.members %>
      <tr><td><%= link_to(member.login, member) %></td></tr>
    <% end %>
  </table>
<% end %>
