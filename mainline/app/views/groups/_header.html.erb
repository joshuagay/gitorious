<%= site_header do %>
  <h2>
    <%= group_avatar(group) %>
    <%= link_to(group.name) %>
  </h2>
  <% if group.description? %>
    <div class="gts-markup">
      <%= render_markdown(group.description).html_safe %>
    </div>
  <% end %>
  <% if group_admin?(group, current_user) %>
    <%= render 'groups/show/admin_menu', :group => group, :active => active %>
  <% end %>
<% end %>
