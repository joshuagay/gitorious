<%= render "projects/header", :project => project, :active => :admin %>

<div class="container" id="gts-pjax-container">
  <div class="alert alert-error">
    <%= form_for project, :html => { :method => :delete, :class => "form-horizontal" } do |f| -%>
      <fieldset>
        <legend>
          <%= @title = "Permanently delete #{project.name}?" %>
        </legend>
        <p class="well">
          Are you sure you want to delete this project? There is no going back.
          The project, all its repositories along with all their meta data will
          be irrevocably removed.
        </p>
        <button class="btn btn-primary" type="submit">I understand; permanently remove this project</button>
      </fieldset>
    <% end -%>
  </div>
</div>
