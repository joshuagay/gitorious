<% @title = "Edit #{project.title} URL string" %>

<%= render "projects/header", :project => ProjectPresenter.new(project), :active => :admin %>

<div class="container" id="gts-pjax-container">
  <div class="row-fluid">
    <div class="span8">
      <%= simple_form_for(project, {
              :as => :project,
              :url => edit_slug_project_path(project),
              :method => "put",
              :html => { :class => "form-horizontal" }
            }) do |form| %>
        <fieldset>
          <legend>
            <%= t("views.projects.edit_slug_title", :link => link_to(h(project.title), project_path(project))) %>
          </legend>
          <%= form.input(:slug, {
                  :label => t(:slug, :scope => "activerecord.attributes.project"),
                  :hint => t('views.projects.edit_slug_disclaimer_html')
                }) %>
          <div class="form-actions">
            <%= form.submit(t("views.projects.update_slug"), :class => "btn btn-primary") %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
