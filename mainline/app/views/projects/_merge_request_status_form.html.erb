<tr>
  <td>
    <% if project_form.nil? %>
      <small class="hint">Unsaved</small>
    <% else %>
      <%= project_form.radio_button :default_merge_request_status_id, form.object.id,
          :checked => form.object.default? %>
    <% end %>
  </td>
  <td>
    <%= form.text_field :name, :class => "gts-mrs-name" %>
  </td>
  <td>
    <%= form.select :state, MergeRequestStatus.default_states, {}, :class => "gts-mrs-state" %>
  </td>
  <td>
    <%= form.text_field :description, :class => "gts-mrs-description" %>
  </td>
  <td>
    <%= form.text_field :color, :class => "gts-mrs-color color_pickable" %>
  </td>
  <td class="gts-mrs-remove">
    <%= form.hidden_field(:_destroy) %>
  </td>
</tr>
