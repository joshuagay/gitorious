<% render "header" %>

<%= form_tag(bulk_update_messages_path, :method => :put) do %>
  <%= hidden_field_tag :return_to_action, params[:action] %>
  <table class="table">
    <tr>
      <th></th>
      <th>Who</th>
      <th>What</th>
      <th>When</th>
    </tr>
    <% if messages.present? %>
      <%= render messages %>
    <% else %>
      <tbody>
        <tr>
          <td colspan="4">
            No messages
          </td>
        </tr>
      </tbody>
    <% end %>
    <tfoot>
      <tr>
        <td colspan="4">
          <div class="will-paginate-pager">
            <%= render_pagination_links (messages) %>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
  <hr/>
  <%= render "bulk_action_menu" %>
<% end %>
