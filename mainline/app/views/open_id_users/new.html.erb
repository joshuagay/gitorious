<div class="gts-site-header">
  <div class="container">
    <h1><%= t("views.users.openid_build_title") %></h1>
  </div>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="openid-signup">
      <%= simple_form_for(user, :as => :user, :url => { :action => "create" }, :html => { :class => 'form-horizontal form-large-labels' }) do |f| %>
        <fieldset>
          <legend>
            <p><%= t("views.users.openid_build_description") %></p>
          </legend>
          <%= f.input :email, :as => :email, :required => true, :label => t(:email, :scope => "activerecord.attributes.user") %>
          <%= f.input :login, :required => true, :label => t(:login, :scope => "activerecord.attributes.user") %>
          <%= f.input :fullname, :label => t(:fullname, :scope => "activerecord.attributes.user") %>
          <%= f.input :terms_of_use, :as => :boolean,
            :label => %(I accept the #{link_to('Terms of Service', Gitorious::View.terms_of_service_url)}).html_safe %>
          <div class="form-actions">
            <%= f.submit t("views.common.signup"), :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
