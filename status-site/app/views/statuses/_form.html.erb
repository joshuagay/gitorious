<%= form_for(@status) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>
      <ul>
      <% @status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :status %>
    <% Status.statuses.each do |status| %>
      <%= f.radio_button :status, status %>
      <label for="status_status_<%= status %>"><%= Status.status_text(status) %></label>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :post_to_twitter %>
    <%= f.check_box :post_to_twitter %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
